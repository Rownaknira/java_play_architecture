<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="cassandra_pu">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <!-- 2way. 1 is all classes write and classpath set in build.sbt. 2 is entity into jar file. -->
        <class>models.Product</class>
        <class>models.User</class>
        <class>models.Session</class>
        <class>models.UserBranch</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="kundera.nodes" value="localhost"/>
            <property name="kundera.port" value="9042"/>
            <property name="kundera.keyspace" value="java_play"/>
            <property name="kundera.dialect" value="cassandra"/>
            <property name="kundera.show.query" value="true" />
            <property name="kundera.client.lookup.class" value="com.impetus.kundera.client.cassandra.dsdriver.DSClientFactory" />


        </properties>
    </persistence-unit>


    <persistence-unit name="cassandra_test">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <class>models.Product</class>
        <class>models.User</class>
        <class>models.Session</class>
        <class>models.UserBranch</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="kundera.nodes" value="localhost"/>
            <property name="kundera.port" value="9042"/>
            <property name="kundera.keyspace" value="java_play_ut"/>
            <property name="kundera.dialect" value="cassandra"/>
            <property name="kundera.show.query" value="true" />
            <property name="kundera.client.lookup.class" value="com.impetus.kundera.client.cassandra.dsdriver.DSClientFactory" />


            <property name="kundera.ddl.auto.prepare" value="create-drop" />

        </properties>
    </persistence-unit>
</persistence>