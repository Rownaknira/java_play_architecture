# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


POST    /products                   controllers.ProductController.create
PUT     /products/:id               controllers.ProductController.update(id: String)
DELETE  /products/:id               controllers.ProductController.delete(id: String)
GET     /products/:id               controllers.ProductController.get(id: String)
GET     /products                   controllers.ProductController.getAll

POST    /users                      controllers.UserController.create
PUT     /users                      controllers.UserController.update
GET     /users                      controllers.UserController.getUserGroupByBranch

POST    /sessions                   controllers.SessionController.login
DELETE  /sessions                   controllers.SessionController.logout
